{
    "files": [],
    "references": [
        {
            "path": "./tsconfig.app.json"
        },
        {
            "path": "./tsconfig.node.json"
        },
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "plugins": [
            {
                "name": "gql.tada/ts-plugin",
                "schemas": [
                    {
                        "name": "spectra",
                        "schema": "./generated/spectra.graphql",
                        "tadaOutputLocation": "./generated/spectra-graphql-env.d.ts",
                        "noIntrospection": true
                    },
                ]
            }
        ]
    }
}